@page "/admin"
@using WeightTracker.Client.Models
@inject WeightTracker.Client.Services.AdminService AdminService

<div class="container fade-in-up admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">Admin Dashboard</h1>
            <p class="admin-subtitle">Manage users and view basic information</p>
        </div>
        <div class="admin-controls">
            <input class="search" @bind="searchTerm" placeholder="Search users by name or email..." />
            <button class="btn btn-outline" @onclick="Refresh">Refresh</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner"></div>
            <p>Loading users...</p>
        </div>
    }
    else
    {
        <div class="admin-stats">
            <div class="stat-card">
                <div class="stat-value">@((users?.Count) ?? 0)</div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>

        <div class="user-list card">
            @if (FilteredUsers?.Any() == true)
            {
                <table class="user-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Member Since</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in FilteredUsers)
                        {
                            <tr>
                                <td>@u.Name</td>
                                <td>@u.Email</td>
                                <td>@u.DateJoined.ToString("yyyy-MM-dd")</td>
                                <td class="actions">
                                    <button class="btn btn-sm btn-outline" @onclick="() => OpenUserDetails(u)">View</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <p>No users found.</p>
                </div>
            }
        </div>
    }

    @if (showUserModal && selectedUser != null)
    {
        <div class="modal-overlay" @onclick="CloseUserModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>User Details</h3>
                    <button class="modal-close" @onclick="CloseUserModal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="detail-row"><strong>Name:</strong> @selectedUser.Name</div>
                    <div class="detail-row"><strong>Email:</strong> @selectedUser.Email</div>
                    <div class="detail-row"><strong>Joined:</strong> @selectedUser.DateJoined.ToString("MMMM dd, yyyy")</div>
                    <div class="detail-row"><strong>Id:</strong> @selectedUser.Id</div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseUserModal">Close</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<User>? users;
    private string searchTerm = string.Empty;
    private bool isLoading = true;

    private bool showUserModal = false;
    private User? selectedUser;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            isLoading = true;
            users = await AdminService.GetAllUsersAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private IEnumerable<User>? FilteredUsers =>
        string.IsNullOrWhiteSpace(searchTerm)
            ? users
            : users?.Where(u => (u.Name ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase) || (u.Email ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    private void OpenUserDetails(User u)
    {
        selectedUser = u;
        showUserModal = true;
    }

    private void CloseUserModal()
    {
        showUserModal = false;
        selectedUser = null;
    }

    private async Task Refresh()
    {
        await LoadUsers();
    }
}
