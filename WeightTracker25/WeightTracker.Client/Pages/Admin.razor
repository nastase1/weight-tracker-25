@page "/admin"
@using WeightTracker.Domain.Entities
@inject WeightTracker.Client.Services.AdminService AdminService

<div class="container fade-in-up admin-page">
    <div class="admin-header">
        <div>
            <h1 class="admin-title">Admin Dashboard</h1>
            <p class="admin-subtitle">Manage users and view basic information</p>
        </div>
        <div class="admin-controls">
            <input class="search" @bind="searchTerm" placeholder="Search users by name or email..." />
            <button class="btn btn-outline" @onclick="Refresh">Refresh</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner"></div>
            <p>Loading users...</p>
        </div>
    }
    else
    {
        <div class="admin-stats">
            <div class="stat-card">
                <div class="stat-value">@((users?.Count) ?? 0)</div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>

        <div class="user-list card">
            @if (FilteredUsers?.Any() == true)
            {
                <table class="user-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Login Type</th>
                            <th>Member Since</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in FilteredUsers)
                        {
                            <tr class="@(u.DeletedAt.HasValue ? "user-inactive" : "")">
                                <td>@u.Username</td>
                                <td>@u.Email</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(u.LoginProvider))
                                    {
                                        <span class="login-type external">
                                            <i class="provider-icon @GetProviderIcon(u.LoginProvider)"></i>
                                            @u.LoginProvider
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="login-type local">
                                            <i class="provider-icon email-icon"></i>
                                            Email/Password
                                        </span>
                                    }
                                </td>
                                <td>@u.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (u.DeletedAt.HasValue)
                                    {
                                        <span class="status-badge inactive">Inactive</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge active">Active</span>
                                    }
                                </td>
                                <td class="actions">
                                    <button class="btn btn-sm btn-outline" @onclick="() => OpenUserDetails(u)">View</button>
                                    @if (u.DeletedAt.HasValue)
                                    {
                                        <button class="btn btn-sm btn-success" @onclick="() => ActivateUser(u.UserId)">Activate</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-danger" @onclick="() => DeactivateUser(u.UserId)">Deactivate</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <p>No users found.</p>
                </div>
            }
        </div>
    }

    @if (showUserModal && selectedUser != null)
    {
        <div class="modal-overlay" @onclick="CloseUserModal">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>User Details</h3>
                    <button class="modal-close" @onclick="CloseUserModal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="detail-row"><strong>Name:</strong> @selectedUser.Username</div>
                    <div class="detail-row"><strong>Email:</strong> @selectedUser.Email</div>
                    <div class="detail-row">
                        <strong>Login Type:</strong> 
                        @if (!string.IsNullOrEmpty(selectedUser.LoginProvider))
                        {
                            <span class="login-type external">
                                <i class="provider-icon @GetProviderIcon(selectedUser.LoginProvider)"></i>
                                @selectedUser.LoginProvider Login
                            </span>
                        }
                        else
                        {
                            <span class="login-type local">
                                <i class="provider-icon email-icon"></i>
                                Email/Password Registration
                            </span>
                        }
                    </div>
                    <div class="detail-row"><strong>Joined:</strong> @selectedUser.CreatedAt.ToString("MMMM dd, yyyy")</div>
                    <div class="detail-row"><strong>Id:</strong> @selectedUser.UserId</div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseUserModal">Close</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Users>? users;
    private string searchTerm = string.Empty;
    private bool isLoading = true;

    private bool showUserModal = false;
    private Users? selectedUser;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        try
        {
            isLoading = true;
            users = await AdminService.GetAllUsersAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private IEnumerable<Users>? FilteredUsers =>
        string.IsNullOrWhiteSpace(searchTerm)
            ? users
            : users?.Where(u => (u.Username ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase) || (u.Email ?? "").Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    private void OpenUserDetails(Users u)
    {
        selectedUser = u;
        showUserModal = true;
    }

    private void CloseUserModal()
    {
        showUserModal = false;
        selectedUser = null;
    }

    private async Task Refresh()
    {
        await LoadUsers();
    }

    private async Task DeactivateUser(Guid userId)
    {
        try
        {
            var success = await AdminService.DeactivateUserAsync(userId);
            if (success)
            {
                await LoadUsers();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deactivating user: {ex.Message}");
        }
    }

    private async Task ActivateUser(Guid userId)
    {
        try
        {
            var success = await AdminService.ActivateUserAsync(userId);
            if (success)
            {
                await LoadUsers();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error activating user: {ex.Message}");
        }
    }

    private string GetProviderIcon(string provider)
    {
        return provider?.ToLower() switch
        {
            "google" => "google-icon",
            _ => "external-icon"
        };
    }
}
