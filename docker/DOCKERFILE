# Multi-stage build for optimized production image
FROM mcr.microsoft.com/dotnet/aspnet:8.0-alpine AS base
WORKDIR /app
EXPOSE 5271

# Create non-root user for security
RUN addgroup -S appgroup && adduser -S appuser -G appgroup

FROM mcr.microsoft.com/dotnet/sdk:8.0-alpine AS build
ARG BUILD_CONFIGURATION=Release
ARG VERSION=1.0.0
ARG BUILD_NUMBER=0
ARG COMMIT_SHA=""
WORKDIR /src

# Set version labels
LABEL org.opencontainers.image.version="${VERSION}"
LABEL org.opencontainers.image.build.number="${BUILD_NUMBER}"
LABEL org.opencontainers.image.revision="${COMMIT_SHA}"

# Copy project files and restore dependencies (cached layer)
COPY ["WeightTracker25/WeightTracker.API/WeightTracker.API.csproj", "WeightTracker25/WeightTracker.API/"]
COPY ["WeightTracker25/WeightTracker.Application/WeightTracker.Application.csproj", "WeightTracker25/WeightTracker.Application/"]
COPY ["WeightTracker25/WeightTracker.Client/WeightTracker.Client.csproj", "WeightTracker25/WeightTracker.Client/"]
COPY ["WeightTracker25/WeightTracker.Domain/WeightTracker.Domain.csproj", "WeightTracker25/WeightTracker.Domain/"]
COPY ["WeightTracker25/WeightTracker.Infrastructure/WeightTracker.Infrastructure.csproj", "WeightTracker25/WeightTracker.Infrastructure/"]
COPY ["WeightTracker25/WeightTracker.Shared/WeightTracker.Shared.csproj", "WeightTracker25/WeightTracker.Shared/"]
COPY ["WeightTracker25/WeightTracker.Tests/WeightTracker.Tests.csproj", "WeightTracker25/WeightTracker.Tests/"]

RUN dotnet restore "WeightTracker25/WeightTracker.API/WeightTracker.API.csproj"

# Copy all source files
COPY . .
WORKDIR "/src/WeightTracker25/WeightTracker.API"
# Build the application with version
RUN dotnet build "WeightTracker.API.csproj" -c $BUILD_CONFIGURATION -o /app/build \
    /p:Version=$VERSION \
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
ARG VERSION=1.0.0

# Publish the application with version
RUN dotnet publish "WeightTracker.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish \
    /p:UseAppHost=false \
    /p:Version=$VERSION \
    /p:AssemblyVersion=$VERSION.0 \
    /p:FileVersion=$VERSION.0 \
    /p:InformationalVersion=$VERSION
ARG BUILD_CONFIGURATION=Release

# Publish the application
RUN dotnet publish "WeightTracker.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app

# Copy published application
COPY --from=publish /app/publish .

# Set environment variables for version tracking
ARG VERSION=1.0.0
ARG BUILD_NUMBER=0
ARG COMMIT_SHA=""
ENV APP_VERSION=${VERSION} \
    BUILD_NUMBER=${BUILD_NUMBER} \
    COMMIT_SHA=${COMMIT_SHA}

# Create directories for SQLite database, backups, and ensure proper permissions
RUN mkdir -p /app/data /app/backups && \
    chown -R appuser:appgroup /app && \
    chmod 777 /app/data /app/backups
USER appuser

# Install curl for health check
USER root
RUN apk --no-cache add curl

# Set back to appuser
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:5271/health || exit 1

ENTRYPOINT ["dotnet", "WeightTracker.API.dll"]